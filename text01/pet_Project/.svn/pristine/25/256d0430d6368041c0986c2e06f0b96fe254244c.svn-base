<script type="text/javascript">
    //购物车中下单的数量
    debugger
   var marke=${mnumber};

    //全局变量  产品id
    var pid=0;
    //库存
    var repertory;
    //传入pid
    //解决价格,规格同步与产品的映射
    function getprod(id) {

        pid=id;

        var para=new Object();

        para.pid=id;

        //根据idc查商品信息
        $.post("productFront/getProductByPid",para,function (data) {

            //alert(data.pname);
            //将库存放入全局变量
            repertory=data.repertory;
            //将数据填入html
            $("#dlprice").text(data.pprice);
            //如果购物车中没有则 数量归零
            //数量放入
            $("#numb").val(data.pnumber);
            //当商品总价格归零
            $("#pprice").text(data.pnumberPrice);

            $("#pack").text(data.pack);

        });

    }


    //根据产品id 操作购物车
    function cart(pid,url) {

        var para=new Object();

         para.pid=pid;

        $.post(url,para,function (data) {
              //提示信息
              //alert(data.msg);
        });

    }




    //点击加号 改变页面值 并添加购物车
    function add(){
        debugger
        //获得单价
        if(pid==0){
            alert("请选择商品");
            return;
        }
        var dlprice=$("#dlprice").text();
        //数量
        var numb=$("#numb").val();
        //数量加一
        numb++;
        marke++;
        //如果大于库存则 不自增
        if(numb>repertory){
            alert("没库存了");
            return;
        }

        $("#numb").val(numb);


       //价格X数量
        pprice=dlprice*numb;

        //给商品价格赋值
        $("#pprice").text(pprice);

        //给总价格赋值

       var pcount=$("#pcount").text();

        count= parseFloat(pcount,  10)+ parseFloat(dlprice,  10);

        //总价+单价
        $("#pcount").text(count);

        //添加购物车
        cart(pid,"productFront/addCart");
    }
    //减  改变页面值 修改购物车
    function low() {
        debugger
        //获得单价
        var dlprice=$("#dlprice").text();
        //数量
        var numb=$("#numb").val();
        //数量加一
        numb--;
        marke--;
        if(numb>=0){
        $("#numb").val(numb);
        //价格X数量
        pprice=dlprice*numb;

        //给商品价格赋值
        $("#pprice").text(pprice);


        //给总价格赋值

        var pcount=$("#pcount").text();



        count= parseFloat(pcount,  10)- parseFloat(dlprice,  10);

        //总价+单价
        $("#pcount").text(count);

         //向后台提交数据
        cart(pid,"productFront/reduceCart");
        }

    }

    function admin_edit(title,url,id,w,h){
        layer_show(title,url,w,h);
    }
    function makeOrder() {

        if(marke<=0){
            alert("您还未选择商品");
            return;
        }
        location.href="productFront/makeOrder";
    }
</script>
